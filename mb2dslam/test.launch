<launch>
  <node pkg="tf" type="static_transform_publisher" name="base_kinect_broadcaster3" args="0 0 0 0 0 0 map base_link 100" />
  <node pkg="tf" type="static_transform_publisher" name="base_kinect_broadcaster" args="-0.115 0 0.226 0 0 0 base_link laser 100" />
  <node pkg="tf" type="static_transform_publisher" name="base_kinect_broadcaster1" args="0 0 0 0 0 0 laser openni_rgb_optical_frame 100" />
  <node pkg="tf" type="static_transform_publisher" name="base_kinect_broadcaster2" args="0 0 0 0 0 0 laser openni_depth_optical_frame 100" />
  <node pkg="laser_scan_matcher" type="laser_scan_matcher_node" name="lsm" >
    <remap from="cloud" to="/camera/depth/points"/>
    <param name="use_odom" value="false"/>
    <param name="use_imu" value="false"/>
    <param name="use_cloud_input" value="true"/>
  </node>
</launch>
