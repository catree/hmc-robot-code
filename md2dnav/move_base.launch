<launch>
  <master auto="start"/>

  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find md2dnav)/beckman.yaml"/>

  <!--- Run AMCL -->
  <include file="$(find md2dnav)/amcl_omni.launch" />

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find md2dnav)/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find md2dnav)/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find md2dnav)/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find md2dnav)/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find md2dnav)/base_local_planner_params.yaml" command="load" />
  </node>
</launch>
